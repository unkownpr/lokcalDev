{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LokcalDev",
  "version": "0.1.0",
  "identifier": "dev.lokcal.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "LokcalDev",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "shortDescription": "Local development environment manager",
    "longDescription": "LokcalDev is a local development environment manager for macOS and Windows. Manage PHP, Nginx, MariaDB, sites, SSL certificates and DNS â€” all from a single app.",
    "copyright": "Copyright 2026 ssilistre.dev. All rights reserved.",
    "category": "DeveloperTool",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
